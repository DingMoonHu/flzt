#!/usr/bin/env node

// vi /bin/yuefe
// 与yuefe 不同，重新定义了路径
var Liftoff = require('../../liftoff');
var argv = require('fis3/node_modules/minimist')(process.argv.slice(2));
var path = require('path');
var cli = new Liftoff({
  name: 'yuefe', // 命令名字
  processTitle: 'yuefe',
  moduleName: 'yuefe',
  configName: 'yuefe-conf',

  // only js supported!
  extensions: {
    '.js': null
  }
});

cli.launch({
  cwd: argv.r || argv.root,
  configPath: argv.f || argv.file
}, function(env) {
  var fis;

  if (!env.modulePath) {
    fis = require('../');    
  } else {
    fis = require(env.modulePath);    
  }
  
  // 重新定义fis3模块所在的路径
  // hudw@yueus.com
  //var fis_modules_path = path.join(env.cwd, 'node_modules/fis3/node_modules');

  // 配置插件查找路径，优先查找本地项目里面的 node_modules
  // 然后才是全局环境下面安装的 fis3 目录里面的 node_modules
  //fis.require.paths.unshift(path.join(env.cwd, 'node_modules'));
  //fis.require.paths.push(fis_modules_path);
  fis.cli.run(argv, env);


});